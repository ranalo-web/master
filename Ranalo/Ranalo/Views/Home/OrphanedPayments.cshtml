@using Ranalo.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model List<KosePayments>
@{
	Layout = "_Layout";
}

<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3"><strong>Orphaned</strong> Payments</h1>
		<div class="row">
			<div>
				<div class="card flex-fill">
					<div class="card-header">

						<h5 class="card-title mb-0">Payments with no Account</h5>
					</div>
					<table class="table table-hover my-0">
						<thead>
							<tr>
								<th>MpesaCode</th>
								<th>AccountNo</th>
								<th>AmountValue</th>
								<th>PaymentDateValue</th>
							</tr>
						</thead>
						<tbody>
							@{
								foreach (var order in Model)
								{
									<tr>
										<td>@order.MpesaCode </td>
										<td>@order.AccountNo</td>
										<td>@order.AmountValue</td>
										<td>@order.PaymentDateValue</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
</main>
